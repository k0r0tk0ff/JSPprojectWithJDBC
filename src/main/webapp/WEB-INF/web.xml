        <servlet-name>JsonController</servlet-name>
        <servlet-class>servlets.admin.JsonController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>JsonController</servlet-name>
        <url-pattern>/json</url-pattern>
    </servlet-mapping>-->
</web-app>